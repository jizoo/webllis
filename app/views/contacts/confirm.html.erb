<% provide(:title, 'お問い合わせ（確認）') %>

<%= render layout: 'layouts/form' do %>
  <h1>お問い合わせ（確認）</h1>
  <%= form_for @contact, url: :contacts do |f| %>
    <%= render 'confirming_form', f: f %>
    <%= f.submit '送信', class: 'btn btn-primary' %>
    <%= f.submit '訂正', name: 'correct', class: 'btn btn-default'  %>
  <% end %>
<% end %>
