<% provide(:title, 'コメントの返信') %>
<h1>コメントの返信</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'comment' %>
    <hr>
    <%= form_for @reply,
      url: confirm_post_comment_reply_path(post_id: @post, comment_id: @comment) do |f| %>
      <%= render 'form', f: f %>
      <div>
        <%= f.submit '確認画面へ進む', class: 'btn btn-primary' %>
        <%= link_to 'キャンセル', @post, class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
