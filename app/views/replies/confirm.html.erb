<% provide(:title, '問い合わせへの返信（確認）') %>
<h1>問い合わせへの返信（確認）</h1>

<%= form_for @reply, url: post_comment_reply_path(@post, @comment) do |f| %>
  <%= render 'confirming_form', f: f %>
  <%= f.submit '送信', class: 'btn btn-primary' %>
  <%= f.submit '訂正', name: 'correct', class: 'btn btn-default'  %>
<% end %>
