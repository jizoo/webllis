<div class="row">
  <div class="col-lg-7 col-md-7">
    <%= link_to image_tag(favorite.image.url, alt: 'favorite', class: 'img-responsive'), favorite %>
  </div>
  <div class="col-lg-5 col-md-5">
    <h3><%= link_to favorite.title, favorite %></h3>
    <p><%= truncate(favorite.description, length: 200) %>
      <%= link_to('続きを読む', favorite) %></p>
    <span><%= favorite.created_at.strftime('%Y/%m/%d') %></span>
    <span class="pull-right">
      <%= link_to gravatar_for(favorite.user, size: 15), favorite.user %>
      <%= link_to favorite.user.name, favorite.user %>
    </span>
  </div>
</div>
<hr>
