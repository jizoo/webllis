<%= provide(:title, '投稿の詳細') %>
<h1>投稿の詳細</h1>

<div class="row">
  <div class="col-md-12">
  <h3>Posts</h3>
    <ul class="media-list">
      <li class="media">
        <%= link_to image_tag(@post.image, alt: 'post', class: 'media-object'),
          @post.url, class: 'pull-left', target: '_blank' %>
        <div class="media-body">
          <h4 class="media-heading"><%= link_to @post.title, @post.url, target: '_blank' %></h4>
          <p><%= @post.description %></p>
        </div>
      </li>
    </ul>
  </div>
</div>
