<%= provide(:title, @post.title) %>
<h1 class="page-header">投稿の詳細</h1>

<div class="row">
  <div class="col-lg-7 col-md-7">
    <%= link_to post_image(@post), @post.url, target: '_blank' %>
  </div>
  <div class="col-lg-5 col-md-5">
    <h3><%= link_to @post.title, @post.url, target: '_blank' %></h4>
    <p><%= formatted_content(@post.description) %></p>
    <dl>
      <dt>投稿者：</dt></dd><%= link_to_creator(@post.user) %></dd>
      <dt>日付：</dt><dd><%= @post.created_at.strftime('%Y/%m/%d') %></dd>
      <dt>タグ：</dt><dd><%= tags_for_post(@post) %></dd>
    </dl>
    <%= render 'posts/favorite_form' if current_user.present? %>
  </div>
</div>

<%= render 'posts/comment' if current_user.present? %>
