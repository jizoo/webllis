<% provide(:title, '自分投稿一覧') %>
<div class="col-lg-12 page-header">
  <h1>自分の投稿一覧</h1>
  <h3>自分の投稿 <span class="badge">
    <%= current_user.posts.count %></span></h3>
</div>

<% @posts.each do |post| %>
  <%= render partial: 'shared/post_item', locals: { item: post } %>
<% end %>
<%= paginate @posts %>
<%= render 'shared/tag_cloud' %>
