<li class="media">
  <%= link_to image_tag(post.image, alt: 'post', class: 'media-object'),
    post, class: 'pull-left' %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to post.title, post %></h4>
    <p><%= post.description %></p>
    <%= link_to '詳細', post %>
    <%= link_to '編集', [ :edit, post ] %>
    <%= link_to '削除', post, method: :delete,
              data: { confirm: '本当に削除しますか？' } %>
  </div>
</li>
