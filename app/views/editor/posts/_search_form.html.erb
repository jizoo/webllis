<%= form_for @search_form, as: 'search', url: :editor_root,
    html: { method: :get, class: 'search' } do |f| %>
  <%= markup do |m|
    p = FormPresenter.new(f, self)
    m << p.text_field_block(:url, 'URL')
    m << p.text_field_block(:title, 'タイトル')
    m << p.text_field_block(:description, '説明')
    m << f.submit('検索', class: 'btn btn-primary')
  end %>
<% end %>
