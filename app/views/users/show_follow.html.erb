<% provide(:title, @title) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <h1><%= gravatar_for @user %><%= @user.name %></h1>
      <span><%= link_to "マイページ", @user %></span>
      <span><b>投稿:</b> <%= @user.posts.count %></span>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <h3><%= @user.name %>の<%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>
