<% provide(:title, @user.name) %>
<h1>
  <%= image_tag @user.icon_image, class: 'icon-image' %>
  <%= @user.name %>
</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="pull-right">
      <%= render 'follow_form' if logged_in? %>
    </div>
    <div>
      <span><b>投稿:</b> <%= @user.posts.count %></span>
    </div>
    <div>
      <%= render 'stats' %>
    </div>
  </div>
</div>
